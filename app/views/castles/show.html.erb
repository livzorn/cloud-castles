<div class="d-flex castles_container">
  <div class="castle_images">
    <div class ="main_image">
      <%= image_tag "cdj1.jpg" %>
    </div>
     <div class ="d-flex castle_small_images">
      <%= image_tag(asset_path("cdj4.jpg")) %>
      <%= image_tag(asset_path("cdj5.jpg"))%>
      <%= image_tag(asset_path("cdj2.jpg"))%>
    </div>
  </div>


  <div class="castle_text">
    <h2><%= @castle.name %></h2>
    <div class="d-flex location-rating">
      <p><%= @castle.location %></p>
      <p>★★★★★</p>
    </div>
    <div class="d-flex rooms">
      <p>Sleeps: 50</p>
      <p>Bedrooms: 21</p>
      <p>Bathrooms: 19</p>
    </div>
    <p class="description"><%= @castle.description %></p>
    <h4 class="price">€10,000/night</h4>
    <div class="buttons">
      <%= link_to "Book Your Stay", new_castle_booking_path(@castle), class: "btn-book"%>
      <br>
      <%= link_to "back", castles_path, class: "btn-back" %>
    </div>
  </div>
</div>
