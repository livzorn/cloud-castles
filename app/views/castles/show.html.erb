<div class="d-flex castles-container">

  <!-- Bootstrap Image Carousel -->

  <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
      <% @castle.photos.size.times do |i| %>
        <li data-target="#carouselExampleIndicators" data-slide-to="<%= i %>" class="<%= 'active' if i.zero? %>"></li>
      <% end %>
    </ol>
    <div class="carousel-inner">
      <% @castle.photos.each_with_index do |photo, index| %>
      <div class="carousel-item <%= 'active' if index.zero? %>">
        <%= cl_image_tag photo.key, class: "d-block" %>
      </div>
      <% end %>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>

  <!-- Right Side Info  -->

  <div class="castle_text">

    <h2><%= @castle.name %></h2>

    <div class="d-flex location-rating">
      <p><%= @castle.location %></p>
      <p>★★★★★</p>
    </div>

    <div class="d-flex rooms">
      <p>Sleeps: <%= @castle.sleeps %></p>
      <p>Bedrooms: <%= @castle.bedrooms %></p>
      <p>Bathrooms: <%= @castle.bathrooms %></p>
    </div>

    <p class="description"><%= @castle.description %></p>

    <h4 class="price">€<%= @castle.price %>/night</h4>

    <div class="buttons">
      <%= link_to "Book Your Stay", new_castle_booking_path(@castle), class: "btn-pink"%>
      <br>
      <%= link_to "back", castles_path, class: "btn-back" %>
    </div>

  </div>

</div>
